

{% macro post_sizing() %}
  col-xs-12 col-xs-offset-0 col-sm-12 col-sm-offset-0 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2
{% endmacro %}


{% macro post_meta(meta) %}
  <div class='post-meta'>
    {{ meta['date'].weekday_name }}, {{ meta['date'].month_name }} {{ meta['date'].day }}{{ meta['date'].day_suffix }}, {{ meta['date'].year }} by {{ meta['author'] }}
  </div>
{% endmacro %}


{% macro post_teaser(post) %}

  <div class='post-body {{ post_sizing() }}'>

    <!-- post header -->
    <h1 class='post-title'><a href="{{ post.meta['url_stub'] }}">{{ post.meta['title'] }}</a></h1>
    {{ post_meta(post.meta) }}
    <br>

    {{ post.blurb }}

    <hr>

  </div>

{% endmacro %}


{% macro image(src, alt, style, width='50%') %}
  <p class='clearfix post-image'>
    <img src='{{ src }}' alt='{{ alt }}' width='{{ width }}' style='min-width: 300px;'
    {% if style == 'center' %}
      class='center-block'
    {% elif style == 'left' %}
      class='pull-left'
    {% else %}
      class='pull-right'
    {% endif %}
    />
  </p>
{% endmacro %}
